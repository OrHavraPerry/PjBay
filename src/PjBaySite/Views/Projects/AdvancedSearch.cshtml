@model PjBaySite.Models.Project
@{
    ViewData["Title"] = "AdvancedSearch";
    Layout = "_Layout";
}
<html>
<head>
    Search Project:
</head>
<body>
    <form asp-controller="Projects" asp-action="SearchProject" method="post">
        <div class="form-horizontal">


            <hr />

            <div class="form-group">
                <label class="col-md-2 control-label">Grade: </label>
                <br />
                <div class="col-lg-10" style="float:left">
                    <label class="col-md-2 control-label">From: </label>
                    <input name="gradeMin" class="form-control" maxlength="3" style="width: 4px"/>
                </div>
                <div style="float:right">
                    <label class="col-md-2 control-label" >To: </label>
                    <input name="gradeMax" class="form-control" maxlength="3" style="width: 4px"/>
                    <br>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Price:</label>
                <div class="col-lg-10">
                    <label class="col-md-2 control-label">From: </label>
                    <input name="priceMin" class="form-control" maxlength="8" style="width: 9px"/>
                    <label class="col-md-2 control-label">To: </label>
                    <input name="priceMax" class="form-control" maxlength="8" style="width: 9px"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">Words in Description:</label>
                <div class="col-lg-10">
                    <input name="description" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default" >Search</button>
                </div>
            </div>
        </div>
</form>
</body>
</html>