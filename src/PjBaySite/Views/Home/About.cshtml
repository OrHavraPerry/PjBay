<html>
<head>
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBjauX5YS1EHLHgW-ZqRRSpkDxdJTdEJ6E&sensor=false">
    </script>
    <script>

        var geocoder, map;

        function initialize() {

            geocoder = new google.maps.Geocoder();

            var latlng = new google.maps.LatLng(10,10);

            var myOptions = {
                zoom: 7,
                center: latlng,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }

            map = new google.maps.Map(document.getElementById("googleMap"), myOptions);

            $.get("@Url.Action("GetInstituteAdresses", "Home")",
                function (data){
                    for (var i = 0; i < data.length; i++){
                        codeAddress(data[i][1], data[i][0]);
                    }
                });
        }


        function codeAddress(address,name) {

            @*@Url.Action("GetInstituteAdress")*@

            //var address = "Kottayam, Kerala";
            geocoder.geocode({ 'address': address }, function (results, status) {

                if (status == google.maps.GeocoderStatus.OK) {

                    map.setCenter(results[0].geometry.location);

                    var marker = new google.maps.Marker({

                        map: map,

                        title: name,

                        position: results[0].geometry.location
                    });

                }
                else {

                    alert("Geocode was not successful for the following reason: " + status);
                }
            });
        }

    </script>

</head>
