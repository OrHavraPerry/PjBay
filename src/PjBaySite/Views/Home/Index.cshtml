<script>
    var can = document.getElementById('logo');
    var context = can.getContext('2d');


    //the text of the logo
    var text = "PjBay"

    //the color of the background of the circle
    context.fillStyle = "#7FFFD4";
    context.beginPath();
    var radius = 80;
    //drawing a circle
    context.arc(200, 200, radius, 0, Math.PI * 2);
    context.closePath();

    //the width of the line of the circle
    context.lineWidth = 5;

    //the color of the stroke
    context.strokeStyle = '#660066';
    context.stroke();
    context.fill();
    context.fillStyle = "#660066"; // font color to write the text with
    var font = "bold " + radius + "px Gabriola";
    context.font = font;
    // Move it down by half the text height and left by half the text width
    var width = context.measureText(text).width;
    var height = context.measureText("P").width; // this is a GUESS of height
    context.fillText(text, 200 - (width / 2), 200 + (height / 2));
</script>





