@model IEnumerable<PjBaySite.Models.Field>

@{
    ViewData["Title"] = "SearchResult";
}

<h2>Field Found</h2>

<div>
    
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fieldName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fieldName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </table>
</div>
<p>
    <a onclick="history.go(-1);return false;">Back to Search</a> |
    <a asp-action="Index">Back to Main</a>
</p>
